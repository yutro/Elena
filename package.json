{
  "name": "elena",
  "version": "1.0.0",
  "main": "index.js",
  "author": "icokie <icokie@yandex.ru>",
  "license": "MIT",
  "scripts": {
    "prestart": "yarn clean && yarn cp:assets",
    "start": "yarn dev:contentScript",
    "clean": "rm -rf dist/*",
    "dev:wordsCatcher": "parcel src/wordsCatcher/dev-index.html",
    "dev:popUpApp": "parcel src/popUpApp/index.html",
    "dev:wordsTrainer": "parcel src/wordsTrainer/index.html",
    "build:wordsCatcher:js": "parcel build src/wordsCatcher/index.ts -d dist/wordsCatcher --no-source-maps",
    "build:wordsCatcher:css": "parcel build src/wordsCatcher/index.pcss -d dist/wordsCatcher --no-source-maps",
    "build:wordsCatcher": "yarn build:wordsCatcher:js && yarn build:wordsCatcher:css",
    "build:popUpApp": "parcel build src/popUpApp/index.html -d dist/popUpApp --public-url ./ --no-source-maps",
    "build:wordsTrainer": "parcel build src/wordsTrainer/index.html -d dist/wordsTrainer --public-url ./ --no-source-maps",
    "build": "yarn clean && yarn cp:assets && yarn build:wordsCatcher && yarn build:popUpApp && yarn build:wordsTrainer",
    "cp:assets": "yarn cp:manifest && yarn cp:static",
    "cp:manifest": "cp src/manifest.json dist",
    "cp:static": "cp -r src/static dist/static",
    "lint": "eslint 'src/**/*.{ts,tsx}' --quiet --fix",
    "format": "prettier 'src/**/*.{ts,tsx,json,less}' --write"
  },
  "dependencies": {
    "cogo-toast": "^4.2.3",
    "css.gg": "^2.0.0",
    "dexie": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hanger": "^2.2.1",
    "tailwindcss": "^1.4.4"
  },
  "devDependencies": {
    "utility-types": "^3.10.0",
    "@types/chrome": "^0.0.114",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "babel-types": "^6.26.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.1",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.30",
    "postcss-import": "^12.0.1",
    "postcss-remove-unused-css": "^1.0.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.3",
    "precss": "^4.0.0"
  }
}
